<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles/null.css">
    <link rel="stylesheet" href="styles/main.css">
    <title>Home</title>
  </head>
  <body>
    <div class="wrapper">
      <header class="header">
        <h1 class="header_h1">Personal Blog</h1>
        <a href="login"></a>
      </header>

      <main class="main">
        <ul class="articles">
          <% articles.forEach(article => { %>
            <a href="/article/<%= article.id %>">
              <li class="articles_item article">
                <h3 class="article_title"><%= article.title %></h3>
                <p class="article_date"><%= new Date(article.date).toLocaleDateString() %></p>
              </li>
            </a>
          <% }) %>
        </ul>
      </main>
    </div>
  </body>
</html>
