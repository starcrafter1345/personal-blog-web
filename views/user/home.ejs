<!DOCTYPE html>
<html lang="en">
  <%- include("../includes/head") %>
      <link rel="stylesheet" href="/styles/main.css">
      <link rel="stylesheet" href="/styles/home.css">
    <title>Home</title>
  </head>
  <body>
    <div class="wrapper">
      <%- include("../includes/header", {title: "Personal Blog"}) %>

      <main class="main">
        <ul class="articles">
          <% articles.forEach(article => { %>
            <a href="/article/<%= article.id %>">
              <li class="articles_item article">
                <h3 class="article_title"><%= article.title %></h3>
                <p class="article_date"><%= new Date(article.date).toLocaleDateString() %></p>
              </li>
            </a>
          <% }) %>
        </ul>
      </main>
    </div>
  </body>
</html>
